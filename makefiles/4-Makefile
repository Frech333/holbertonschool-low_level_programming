# Makefile for school executable

# Compiler
CC := gcc

# Source files
SRC := main.c school.c

# Object files
OBJ := $(SRC:.c=.o)

# Executable name
NAME := school

# File deletion program
RM := rm -f

# Compiler flags
CFLAGS := -Wall -Werror -Wextra -pedantic

# Default rule
all: $(NAME)

# Rule to build the executable
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Rule to compile source files into object files
%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

# Rule to delete Emacs and Vim temporary files, the executable, and object files
fclean: clean
	$(RM) $(NAME)

# Rule to delete object files
oclean:
	$(RM) $(OBJ)

# Rule to delete Emacs and Vim temporary files along with the executable
clean:
	$(RM) $(OBJ) $(NAME) *~ .*~

# Rule to force recompilation of all source files
re: fclean all

# Disable implicit rules
.SUFFIXES:

# Phony targets (rules that are not associated with a file)
.PHONY: all clean oclean fclean re
